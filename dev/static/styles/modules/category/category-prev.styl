.js-categories-prev
    display flex
    flex-wrap wrap

    & > *
        flex 1 0 calc(25% - 20px)
        max-width 255px
        width calc(25% - 20px)
        margin-right 20px
        margin-bottom 30px

        &:nth-child(4n+4)
            margin-right 0

.category-prev
    background-color $white
    border-radius 4px
    overflow hidden

    &__img
        background-repeat no-repeat
        background-position center
        background-size cover
        height 180px

    &__body
        padding 15px

    &__title
        margin-bottom 20px

        &-text
            font-size 22px
            font-family $bold-font
    
    &__count
        font-size 14px
        color $text-info-color
        margin-left 5px
    
    &__item
        margin-bottom 10px

        &:last-child
            margin-bottom 0
            margin-top 15px

            .category-prev__link
                color $link-color

    &__link
        font-size 14px
        font-family $medium-font

        &-count
            font-size 14px
            color $text-info-color
            margin-left 5px