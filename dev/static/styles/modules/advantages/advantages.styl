.advantages
	display flex
	& > *
		&:not(:last-child)
			margin-right 30px 

.advantage
	-webkit-flex 1
	-ms-flex 1
	flex 1
	display flex
	& > *
		&:not(:last-child)
			margin-right 15px
	
	&__icon
		fill $main-action-color
		size(50px,50px)
	
	&__body
		display flex
		-webkit-flex-direction column
		-ms-flex-direction column
		flex-direction column
		
	&__title
		font-family $medium-font
		margin-bottom 4px
		
	&__text
		font-size 14px
		letter-spacing .25px
		color $text-info-color
	
	&__link
		font-size 14px
		letter-spacing .25px
		margin-top 8px	