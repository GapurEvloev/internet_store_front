.btn
	background-color $main-action-color
	cursor pointer
	border 0
	-webkit-border-radius 4px
	border-radius 4px
	padding 10px 20px
	font-family $medium-font
	line-height 20px
	display flex
	align-items center

	&:hover
		background-color darken($main-action-color,10.5%)

	& > *
		&:not(:last-child)
			margin-right 10px
	
	&__icon
		size(25px,25px)
	
	&.btn
		&--fill
			justify-content center
			width 100%
			border-radius 0 0 4px 4px

		&--disabled
			opacity .5 