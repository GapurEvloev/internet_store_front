.btn
	background-color $main-action-color
	cursor pointer
	border 2px solid transparent
	-webkit-border-radius 4px
	border-radius 4px
	padding 8px 18px
	font-family $medium-font
	line-height 20px
	display flex
	align-items center
	white-space nowrap

	&:hover
		background-color darken($main-action-color,10.5%)

	& > *
		&:not(:last-child)
			margin-right 10px
	
	&__icon
		size(25px,25px)
	
	&.btn
		&--fill
			justify-content center
			width 100%
			border-radius 0 0 4px 4px

		&--disabled
			opacity .5 
		
		&--bg
			&-green
				background-color $btn-green
				color $white
		
		&--border
			&-green
				color $btn-green
				border-color $btn-green
				background-color $white
		
		&--size
			&-s
				padding 4px 15px
				line-height 18px