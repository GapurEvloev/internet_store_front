@import "input-fields"
@import "file-upload"
@import "textarea-field"
@import "form-group"

.show-on-success
    display none

    .popup__body
        padding 0

.form
    &__body
        margin-bottom 30px
        & > *
            margin 20px 0
            &:first-child
                margin-top 0
            &:last-child
                margin-bottom 0
    
    &__footer
        & > *
            margin 10px 0
            &:first-child
                margin-top 0
            &:last-child
                margin-bottom 0
        
    
    &-line
        display flex
        align-items flex-end
        & > *
            &:not(:last-child)
                margin-right 20px
        
        &__info
            font-size 14px

            &--color
                &-green
                    color #1fa349

            &--size-s
                font-size 12px

    &-info
        font-size 12px
        color $text-info-color

        &__link
            text-decoration underline
            color $text-info-color
    
    &-success
        background-color $popup-header-bgc 

        & > * 
            margin 6px 0 
            &:first-child
                margin-top 0
            &:last-child
                margin-bottom 0
        
        &__block
            background-color $white
            padding 30px 40px
        
        &__row
            display flex
            & > *
                &:not(:last-child)
                    margin-right 40px
        &__info
            display flex
            align-items center
            font-size 24px
            margin-bottom 15px
            & > *
                &:not(:last-child)
                    margin-right 10px

        &__number
            font-family $bold-font
        
        &__descr
            font-size 14px
            font-family $light-font

            strong 
                font-family $bold-font

        &-contacts
            display flex
            flex-direction column
            font-size 14px
            position relative
            padding-left 50px
            & > *
                margin 3px 0
                &:first-child
                    margin-top 0
                &:last-child
                    margin-bottom 0

            &__icon
                left 0
                position absolute
                top 0
                size(35px)
            
            &__link
                font-size 12px