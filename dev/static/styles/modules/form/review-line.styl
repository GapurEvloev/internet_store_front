.review-line
    position absolute
    left 1px
    z-index 1
    height 100%
    width 0
    top 30px
    height 5px
    transition all linear  .3s
    background-color $main-action-color

    &__wrapper
        position relative
        padding 30px 0 
        margin 0 10px
    
    &__inner
        align-items flex-end
        display flex
        justify-content space-between
        height 5px
        background-color $input-border-color
    
    &__item
        border-left 1px solid #dedede
        height 20px
        margin-bottom -6px
        position relative

        &.review-line__item
            &--descr
                &-right
                    &:before
                        right 0
                        left auto
                &-center
                    &:before
                        left -50%
                        transform translateX(-50%)
            
            &--active
                .review-line__number
                    background-color $main-action-color

        &:before
            content attr(data-fast-review)
            color $text-info-color
            display block
            font-size 12px
            position absolute
            top -20px
            left 0
            white-space nowrap

    &__number
        position absolute
        top 100%
        left -12px
        border-radius 50%
        size(24px)
        font-size 14px
        line-height 24px    
        text-align center
        cursor pointer

        &:hover
            background-color $white