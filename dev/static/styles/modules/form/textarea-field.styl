.textarea-field
    background-color $hwite
    border-radius 4px
    height 100px
    border 1px solid $input-border-color
    appearance none
    padding 10px 15px
    box-shadow none
    width 100%

    +placeholder()
        color $text-info-color
    
    &.error
        border-color $warning-color
        +placeholder()
            color $warning-color