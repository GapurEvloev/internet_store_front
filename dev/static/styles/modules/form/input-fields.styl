.input-field
    background-color $hwite
    border-radius 4px
    height 50px
    border 1px solid $input-border-color
    appearance none
    padding 10px 15px
    box-shadow none
    width 100%
    
    +placeholder()
        color $text-info-color

    &.input-field
        &--size
            &-xs
                
            &-s
                font-size 14px
                line-height 20px
                height 40px 

        &--width
            &-s
                max-width 245px