// .s-questions
.upgrade
    display flex
    align-items center
    font-size 14px
    & > *
        &:not(:last-child)
            margin-right 10px
    
    &__icon
        width 100%
        height 100%

        &-wrap
            size(20px,20px)
            border-radius 50%

.questions
    display flex
    align-items center
    justify-content space-between

.ask-your-question
    display flex
    align-items center
    & > *
        &:not(:last-child)
            margin-right 30px
    
    &__list
        display flex
        align-items center
        & > *
            &:not(:last-child)
                margin-right 20px

    &__link
        display flex
        align-items center
        & > *
            &:not(:last-child)
                margin-right 10px
    
    &__icon
        size(24px,24px)
        fill $base-text-color