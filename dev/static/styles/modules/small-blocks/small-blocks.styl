@import "banner"
@import "links"
@import "location"
@import "section"

.logo
    font-size 12px
    display flex
    flex-direction column

    &__img
        width 154px
        height 38px

.search
    display flex
    align-items center
    & > *
        &:not(:last-child)
            margin-right 10px
    
    &__icon 
        size(22px)
        fill: $white
        cursor pointer
    
    .input-field
        flex 0 0 220px
        width 220px

.order-callback
    display flex
    flex-direction column

    &__phone
        color $main-action-color
        font-size 24px
        font-family $boldest-font
        line-height 1.5
        white-space nowrap

    &__link
        font-size 14px

.title
    &-page
        font-size 40px
        font-family $medium-font
        line-height 1.25
    
    &-section
        font-size 40px
        font-family $medium-font
        line-height 1.25

.count-text
    font-size 14px
    color $text-info-color
    margin-left 5px

.slider-nav
    cursor pointer
    opacity .5
    position absolute
    top 50%
    transform translateY(-50%)
    transition 0.3s all linear

    &:hover
        opacity 1
    
    &.slider-nav
        &--prev
            left -55px
        &--next
            right -55px
    
    &.slick-disabled
        cursor default

        &:hover
            opacity 0.5
    
    &__icon
        size(30px)
        fill: $base-text-color