
.sales-leaders
    &__row
        display flex
        & > *
            &:not(:last-child)
                margin-right 20px
    
    &__col
        flex 1
    
.sales-leader
    display block
    min-height 240px
    background-color $white
    border-radius 4px
    border 2px solid transparent
    transition 0.3s all linear
    padding 20px
    margin-bottom 20px
    width 100%
    
    &:hover
        border-color $main-action-color
    
    &.sales-leader--big
        min-height 400px

        .sales-leader
            &__img
                max-height: 280px
                max-width 100%
                
                &-wrap
                    height 280px

            &__name
                font-size 22px
    
    &__img
        max-width 100%
        max-width 140px

        &-wrap
            margin-bottom 10px
            display flex
            align-items center
            justify-content center
            height 140px
            
    &__name
        font-family $bold-font
        line-height 1.2